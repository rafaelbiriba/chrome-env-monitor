{
  "manifest_version": 2,

  "name": "Environment Monitor (enmo)",
  "description": "This extension display the environment and project name based in a meta tag at the page header.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "images/icon-inactive.png"
  },

  "content_scripts": [
   {
     "matches": ["http://*.globo.com/*", "http://*.globoi.com/*"],
     "js":["scripts/content.js"]
   }
 ],

 "background":
  {
    "scripts":["scripts/background.js"]
  }
}
